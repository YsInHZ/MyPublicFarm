<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:background="@drawable/index_dialog_bg"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvName"
        android:layout_width="245dp"
        android:layout_marginTop="2dp"
        android:text="类型筛选"
        android:textColor="#ff353535"
        android:textSize="18sp"
        android:gravity="center"
        android:elevation="3dp"

        android:layout_height="42dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDialog"
        android:layout_below="@id/tvName"
        android:background="#000"
        android:layout_width="187dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_height="122dp"></android.support.v7.widget.RecyclerView>

    <View
        android:layout_below="@id/tvName"
        android:layout_width="245dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_height="122dp"
        android:background="@drawable/index_dialog_gradual_bg"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="245dp"
        android:gravity="center_vertical"
        android:layout_marginTop="11dp"
        android:background="@drawable/index_dialog_bg"
        android:layout_height="42dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="重置"
            android:textColor="#ff27bfb2"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#ff787878"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="确定"
            android:textColor="#ff4996ff"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>