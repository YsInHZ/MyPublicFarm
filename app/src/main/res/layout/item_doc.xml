<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/index_dialog_bg"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:src="@mipmap/img_file_index"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="110dp"
            android:layout_toRightOf="@id/img"
            android:text="项目A图审考核反馈.word"
            android:layout_centerVertical="true"
            android:textColor="#ff4996ff"
            android:textSize="14sp"
            />
        <TextView
            android:visibility="visible"
            android:id="@+id/tvDown"
            android:layout_width="wrap_content"
            android:text="下载"
            android:shadowDy="4"
            android:shadowColor="#a34996ff"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/file_bt_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"

            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ProgressBar

            android:id="@+id/pbProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:max="100"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>