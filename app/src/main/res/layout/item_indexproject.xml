<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:layout_height="wrap_content">
    <View
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="100dp"
        android:background="@drawable/item_index"/>
    <ImageView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:src="@mipmap/img_project"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sign"
        app:layout_constraintBottom_toBottomOf="@id/sign"
        app:layout_constraintLeft_toRightOf="@id/sign"
        android:layout_marginLeft="12dp"
        android:text=""
        android:textColor="#ff3f3f3f"
        android:textSize="18sp"
        />
    <View
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/sign"
        android:layout_marginTop="13dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"/>
    <TextView
        android:id="@+id/tvC1"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="14dp"
        android:background="@drawable/index_item_white_text_bg"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff7f7f7f"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tvC2"
        app:layout_constraintLeft_toRightOf="@id/tvC1"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEdit"
        android:layout_marginLeft="10dp"
        android:background="@drawable/index_item_white_text_bg"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff7f7f7f"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tvC3"
        app:layout_constraintLeft_toRightOf="@id/tvC2"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEdit"
        android:layout_marginLeft="10dp"
        android:background="@drawable/index_item_white_text_bg"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff7f7f7f"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tvEdit"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginRight="15dp"
        android:background="@drawable/index_item_blue_text_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textColor="#fff"
        android:textSize="15sp"
        />
</android.support.constraint.ConstraintLayout>