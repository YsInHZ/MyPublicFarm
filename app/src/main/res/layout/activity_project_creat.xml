<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ys.administrator.mydemo.activity.ProjectCreatActivity">
    <include layout="@layout/toolbarlayout"/>

    <TextView
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:text="请输入项目资料"
        android:textColor="#C3C3C3"
        android:textSize="15sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="24dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rxPjtype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/vie1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/vie1"
                    android:gravity="center"
                    android:text="项目类型"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvPjType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:hint="请选择"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:src="@mipmap/img_in_gray" />
            </RelativeLayout>
            <include layout="@layout/line_project_basemsg"/>
            <RelativeLayout
                android:id="@+id/rxTZtype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/vie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/vie2"

                    android:text="土建/装修"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvTZType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:hint="请选择"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:src="@mipmap/img_in_gray" />
            </RelativeLayout>
            <include layout="@layout/line_project_basemsg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/vie3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/vie3"
                    android:text="工程名称"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/etPjName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="22dp"
                    android:background="@null"
                    android:hint="输入项目名称"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <include layout="@layout/line_project_basemsg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/etPjLeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="22dp"
                    android:background="@null"
                    android:hint="输入项目负责人"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <include layout="@layout/line_project_basemsg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="22dp"
                    android:background="@null"
                    android:hint="输入负责人联系电话"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <include layout="@layout/line_project_basemsg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/etGn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="22dp"
                    android:background="@null"
                    android:hint="输入功能"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <include layout="@layout/line_project_basemsg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建筑面积"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/etPjarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@id/nt"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:maxLength="20"
                    android:hint="输入建筑面积"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/nt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m²"
                    android:textColor="#ff000000"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
            <include layout="@layout/line_project_basemsg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/etPjAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="22dp"
                    android:background="@null"
                    android:hint="项目地址选择"
                    android:maxLines="6"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginRight="22dp"
                    android:background="@null"
                    android:hint="输入详细地址"
                    android:maxLines="1"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />
            </RelativeLayout>

            <include layout="@layout/line_project_basemsg"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
