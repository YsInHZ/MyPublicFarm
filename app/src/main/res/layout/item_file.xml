<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="68dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="11dp"
        android:background="@drawable/index_dialog_bg"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:src="@mipmap/img_file_index"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvName"
            android:layout_toRightOf="@id/img"
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/tvDown"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="项目A图审考核反馈.word"
            android:textColor="#ff4996ff"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/img_down_load"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvDown"
            android:layout_width="wrap_content"
            android:text="下载"
            android:shadowDy="4"
            android:shadowColor="#a34996ff"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/file_bt_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>