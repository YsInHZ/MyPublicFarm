<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="com.ys.administrator.mydemo.activity.MinePersonalPhoneChangeActivity">
    <include layout="@layout/toolbarlayout" android:id="@+id/titlebar"/>
    <com.lijiankun24.shadowlayout.ShadowLayout
        android:id="@+id/sl"
        app:layout_constraintTop_toBottomOf="@id/titlebar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shadowColor="#40000000"
        app:shadowShape="oval"
        android:visibility="gone"
        android:padding="@dimen/dp_10"
        app:shadowRadius="12dp"
        app:shadowSide="all">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ciHead"
            android:layout_width="77dp"
            android:layout_height="77dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"

            android:src="@mipmap/img_default_head"/>
    </com.lijiankun24.shadowlayout.ShadowLayout>

    <TextView
        android:id="@+id/nk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titlebar"
        android:includeFontPadding="false"
        android:layout_marginTop="20dp"
        android:text="旧手机号码"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ff000000"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tvOld"
        app:layout_constraintTop_toBottomOf="@id/nk"
        android:layout_marginTop="13dp"
        android:layout_width="0dp"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/index_dialog_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="#000000"
        android:elevation="1dp"
        />

    <TextView
        android:id="@+id/xsj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvOld"
        android:includeFontPadding="false"
        android:layout_marginTop="16dp"
        android:text="新手机号码"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ff000000"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/etNew"
        app:layout_constraintTop_toBottomOf="@id/xsj"
        android:layout_marginTop="13dp"
        android:layout_width="0dp"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/index_dialog_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:inputType="phone"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="#000000"
        android:maxLength="11"
        android:elevation="1dp"
        />
    <TextView
        android:id="@+id/sj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNew"
        android:includeFontPadding="false"
        android:layout_marginTop="14dp"
        android:text="验证码"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#ff000000"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/etCode"
        app:layout_constraintTop_toBottomOf="@id/sj"
        android:layout_marginTop="13dp"
        android:layout_width="0dp"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bCode"
        android:background="@drawable/index_dialog_bg"
        android:gravity="center_vertical"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:maxLength="6"
        android:inputType="number"
        android:hint="验证码"
        android:textSize="15sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="#000000"
        android:elevation="1dp"
        />
    <Button
        android:id="@+id/bCode"
        android:layout_width="wrap_content"
        android:background="@drawable/maincolor_5radiu_shape"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toBottomOf="@id/sj"
        android:layout_marginTop="13dp"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:layout_height="54dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/etCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:text="注：更改后登陆账号为新手机号码。"
        android:textColor="#ff4996ff"
        android:textSize="15sp"
        />
</android.support.constraint.ConstraintLayout>
