<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F8F8"
    tools:context="com.ys.administrator.mydemo.fragment.MineFragment">
    <ImageView
        android:id="@+id/ivHead"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/img_mine_bg"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销"
        android:textColor="#ffffffff"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:shadowRadius="5"
        android:shadowColor="#a32e7dea"
        />
    <RelativeLayout
        android:id="@+id/grzx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivHead"
        android:layout_marginBottom="21dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_marginLeft="22dp"
            android:id="@+id/ciHead"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@mipmap/img_default_head"
            android:elevation="3dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFf"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ciHead"
            android:elevation="3dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:text="Znone"
            android:shadowRadius="10"
            android:shadowColor="#33000000"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ciHead"
            android:layout_marginLeft="25dp"
            android:elevation="3dp"
            android:layout_below="@id/tvName"
            android:text="185****8888"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="29dp"
            android:src="@mipmap/img_in"/>
    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ivHead"
        android:layout_marginTop="13dp"
        android:background="#EAEAEA"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/kfzx"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="23dp"
                android:background="@mipmap/img_kefu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="客服咨询"
                android:textColor="#3f3f3f"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@mipmap/img_in" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="#EAEAEA"/>

        <LinearLayout
            android:id="@+id/wdwj"
