        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="#EAEAEA"/>

        <LinearLayout
            android:id="@+id/wdmb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
